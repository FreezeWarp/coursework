<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <listener>
        <listener-class>edu.metrostate.ics425.jtp307.prodmaint.HttpSessionListenerProvider</listener-class>
    </listener>
    <servlet>
        <servlet-name>ReversiServlet</servlet-name>
        <servlet-class>edu.metrostate.ics425.jtp307.prodmaint.servlets.ReversiServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MoveServlet</servlet-name>
        <servlet-class>edu.metrostate.ics425.jtp307.prodmaint.servlets.MoveServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ReversiServlet</servlet-name>
        <url-pattern>/Reversi</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MoveServlet</servlet-name>
        <url-pattern>/Reversi/Move</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <error-page>
        <error-code>404</error-code>
        <location>/404.jsp</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/500.jsp</location>
    </error-page>
    <error-page>
        <error-code>503</error-code>
        <location>/503.jsp</location>
    </error-page>
</web-app>
